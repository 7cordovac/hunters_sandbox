<% @title = "Showing product" %>

<% unless @product.order_id.present? %>
  <%= button_to 'Add to Cart', orders_path, class: 'btn', params: {'product_id' => @product.id}%>
<% end %>

<br>

<%= image_tag @product.avatar.url %>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-md-2 form-label">Name</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @product.name %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Price</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @product.price %>
      </span>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-2 form-label">Active</label>
    <div class="col-md-10 control-label uneditable-input">
      <span>
        <%= @product.active %>
      </span>
    </div>
  </div>

  <div class="form-actions col-md-offset-2">
    <%= link_to icon_tag("pencil") + ' Edit', edit_product_path(@product), class: 'btn btn-primary' %>
    <%= link_to 'Back', products_path, class: 'btn' %>
  </div>
</div>